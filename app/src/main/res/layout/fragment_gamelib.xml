<?xml version="1.0" encoding="utf-8"?>

<!--游戏库-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_gameLib_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/lightyellow"
        app:tabIndicatorColor="@color/textColor"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/textColor"
        app:tabTextColor="@color/lightskyblue" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_gameLib_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_gameLib_tabLayout"
        android:gravity="center"
        android:textSize="30sp"
        tools:listitem="@layout/item_gamelib" />
</RelativeLayout>