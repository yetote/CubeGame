<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_homePager_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/item_homePager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/item_homePager_iv"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/item_homePager_score"
            android:padding="5dp"
            android:textSize="@dimen/titleSize"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/item_homePager_score"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_above="@id/item_homePager_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@color/textColor"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/contentSize"
            tools:text="8.6" />


        <TextView
            android:id="@+id/item_homePager_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_homePager_title"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:textSize="@dimen/contentSize"
            tools:text="@tools:sample/lorem" />
    </RelativeLayout>
</android.support.v7.widget.CardView>