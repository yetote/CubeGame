<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:id="@+id/item_ad_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/item_ad_menu"
            android:text="@string/ad" />

        <TextView
            android:background="@color/orange"
            android:textColor="@color/white"
            android:padding="5dp"
            android:text="@string/extend"
            android:layout_marginEnd="10dp"
            android:layout_alignBottom="@id/item_ad_from"
            android:drawableEnd="@mipmap/down"
            android:id="@+id/item_ad_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:src="@tools:sample/backgrounds/scenic"
            android:id="@+id/item_ad_iv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/item_ad_from"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_marginStart="10dp"
            tools:text="@tools:sample/full_names"
            android:textSize="@dimen/titleSize"
            android:padding="5dp"
            android:id="@+id/item_ad_title"
            android:layout_below="@id/item_ad_iv"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/item_ad_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_ad_score"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="10dp"
            android:layout_above="@id/item_ad_content"
            android:background="@color/textColor"
            android:textColor="@color/white"
            android:textSize="@dimen/contentSize"
            tools:text="8.6" />


        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:text="@tools:sample/lorem"
            android:layout_below="@id/item_ad_title"
            android:id="@+id/item_ad_content"
            android:textSize="@dimen/contentSize"
            android:padding="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>