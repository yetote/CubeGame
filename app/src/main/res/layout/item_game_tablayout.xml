<?xml version="1.0" encoding="utf-8"?>

<!--自定义tanLayout的item-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="55dp">

    <TextView
        android:id="@+id/item_game_info_tabLayout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@drawable/gameinfo_tablayout_item_textcolor"
        android:textSize="@dimen/contentSize"
        tools:text="详情" />

    <TextView
        android:id="@+id/item_game_info_tabLayout_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gameinfo_tablayout_item_background"
        android:maxLines="1"
        android:padding="2dp"
        android:textSize="12sp"
        android:textColor="@drawable/gameinfo_tablayout_item_textcolor"
        tools:text="1471" />
</LinearLayout>